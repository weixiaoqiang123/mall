<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wxq.mall.mapper.PmsProductAttributeMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="baseMap" type="com.wxq.mall.model.PmsProductAttribute">
        <id column="id" property="id" />
        <result column="product_id" property="productId" />
        <result column="attr_id" property="attrId" />
        <result column="attr_name" property="attrName" />
    </resultMap>

    <resultMap id="refMap" type="com.wxq.mall.model.PmsProductAttribute" extends="baseMap">
        <collection column="product_id" property="attrValues" javaType="list" ofType="com.wxq.mall.model.PmsProductAttributeValue"
                    select="com.wxq.mall.mapper.PmsProductAttributeValueMapper.findAttrValuesByAttrId"/>
    </resultMap>

    <delete id="deleteAttrByProductId" parameterType="string">
        delete from pms_product_attribute where product_id = #{productId}
    </delete>


    <select id="findByPage" resultMap="baseMap">
        select id,product_id,attr_id,attr_name
        from pms_product_attribute
    </select>

    <select id="findAll" resultMap="baseMap">
        select id,product_id,attr_id,attr_name
        from pms_product_attribute
    </select>

    <select id="findAttrsByProductId" parameterType="string" resultMap="refMap">
        select id,product_id,attr_id,attr_name
        from pms_product_attribute
        where product_id = #{productId}
    </select>
</mapper>
