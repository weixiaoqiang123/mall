<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wxq.mall.mapper.CmsAdminNotifyMessageMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="baseMap" type="com.wxq.mall.model.CmsAdminNotifyMessage">
        <id column="id" property="id" />
        <result column="username" property="username" />
        <result column="message" property="message" />
        <result column="is_read" property="read" />
    </resultMap>


    <select id="findByPage" resultMap="baseMap">
        select id,username,message,is_read
        from cms_admin_notify_message
    </select>

    <select id="findAll" resultMap="baseMap">
        select id,username,message,is_read
        from cms_admin_notify_message
    </select>

    <select id="findUnReadMessageByUserName" resultType="com.wxq.mall.model.CmsAdminNotifyMessage">
        select id,username,message,is_read
        from cms_admin_notify_message
        where username = #{username} and is_read = 0
    </select>
</mapper>
